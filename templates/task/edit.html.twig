{% extends 'base.html.twig' %}

{% block title %}Modifier {{ task.name }}{% endblock %}

{% block body %}
<div class="max-w-xl mx-auto mt-10">

    <h1 class="text-2xl font-bold mb-6">Modifier la t√¢che</h1>

    {# Flash messages #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="mb-4 p-3 rounded {{ label == 'success' ? 'bg-green-200 text-green-800' : 'bg-red-200 text-red-800' }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    {{ form_start(form, { attr: { class: 'space-y-4' } }) }}

        <div>
            {{ form_label(form.name) }}
            {{ form_widget(form.name, { attr: { class: 'w-full border rounded p-2' } }) }}
            {{ form_errors(form.name) }}
        </div>

        <div>
            {{ form_label(form.description) }}
            {{ form_widget(form.description, { attr: { class: 'w-full border rounded p-2 h-32' } }) }}
            {{ form_errors(form.description) }}
        </div>

        <button class="px-4 py-2 bg-yellow-600 text-white rounded hover:bg-yellow-700">
            Modifier
        </button>

    {{ form_end(form) }}

    <a href="{{ path('task_view', { id: task.id }) }}"
       class="text-blue-600 underline mt-4 inline-block">
        Retour
    </a>

</div>
{% endblock %}
